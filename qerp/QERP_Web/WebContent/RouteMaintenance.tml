<html t:type="cmp_layout" xmlns:t="http://tapestry.apache.org/schema/tapestry_5_0_0.xsd">
<head> <title>Route Maintenance</title><link rel="stylesheet" type="text/css"  href="${asset:context:css/global.css}"/></head>
<body>

<t:zone t:id="zoneFormView" show="slidedown">
    <t:delegate to="block" />
</t:zone>
<t:block id="blockFormView">
   <form t:type="form" t:id="RouteForm" t:zone="zoneFormView" >
       <t:actionlink t:zone="zoneFormView" t:id="toolbarAdd"><button><img src="images/addRecord24.png" /></button></t:actionlink>
       <button type="submit"><img  src="images/saveRecord24.png" /></button>
       <t:actionlink  t:mixins="confirm" t:message="Are you sure you want to delete ID:${id}?"  t:id="toolbarDel" t:context="${id}"><button><img src="images/deleteDelete24.png" /></button></t:actionlink>
       <div style="height:300px;">
           <t:GRID
           t:id="grid" 
           t:source="Routes"
           t:row="Route"
                   t:rowsPerPage="5"
           t:pagerPosition="top"
           t:inPlace="literal:true">
           <t:parameter name="idCell">
               <t:actionlink t:id="select"  t:zone="zoneFormView"  t:context="Route.id">
                   ${Route.id}
               </t:actionlink>
           </t:parameter>
           </t:GRID>
       </div>
       <table id="main">
           <tr>
               <td>
                   <table id="input">
                       <tr>
                           <th><t:label t:for="id">id</t:label>:</th>
                           <td>  ${id}  <DIV style="display:none;"> <input  t:type="TextField" t:id="id" t:value="id" t:maxLength="20" t:size="20" /></DIV>  </td>
                       </tr>
                       <tr>
                           <th><t:label t:for="Description">Description</t:label>:</th>
                           <td>   <input  t:type="TextField" t:id="Description" t:value="Description" t:maxLength="100" t:size="100" /> </td>
                       </tr>
                       <tr>
                           <th><t:label t:for="Operation">Operation</t:label>:</th>
                           <td>   <input  t:type="TextField" t:id="Operation" t:value="Operation" t:maxLength="11" t:size="11" /> </td>
                       </tr>
                       <tr>
                           <th><t:label t:for="SequenceType">SequenceType</t:label>:</th>
                           <td>   <input  t:type="TextField" t:id="SequenceType" t:value="SequenceType" t:maxLength="2" t:size="2" /> </td>
                       </tr>
                       <tr>
                           <th><t:label t:for="version">version</t:label>:</th>
                           <td>   <input  t:type="TextField" t:id="version" t:value="version" t:maxLength="11" t:size="11" /> </td>
                       </tr>
                       <tr>
                           <th><t:label t:for="Material">Material</t:label>:</th>
                           <td>   <input  t:type="TextField" t:id="Material" t:value="Material" t:maxLength="20" t:size="20" /> </td>
                       </tr>
                               </table>
               </td>
           </tr>
       </table>
   <t:errors />
   </form>
</t:block>
</body>
</html>
