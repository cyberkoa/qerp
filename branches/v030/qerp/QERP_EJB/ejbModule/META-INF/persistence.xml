<?xml version="1.0" encoding="UTF-8"?>

<persistence xmlns="http://java.sun.com/xml/ns/persistence"
   xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
   xsi:schemaLocation="http://java.sun.com/xml/ns/persistence http://java.sun.com/xml/ns/persistence/persistence_1_0.xsd"
   version="1.0">
   
   <!-- 
		The Java code to use this persistence unit is...
		
		@PersistenceContext (unitName="QERP_EJB") 
		protected EntityManager em;
   --> 

    <persistence-unit name="QERP_EJB">
    	<description>Entity Beans for QERP</description>	    
		<provider>org.apache.openjpa.persistence.PersistenceProviderImpl</provider>
		<jta-data-source>qerp</jta-data-source>
		<non-jta-data-source>qerp</non-jta-data-source>
        <jar-file>QERP_EJB.jar</jar-file>
        <class>com.quesoware.business.domain.system.DocumentType</class>
        <class>com.quesoware.business.domain.system.ApplicationConfiguration</class>
        <class>com.quesoware.business.domain.security.UserRole</class>
        <class>com.quesoware.business.domain.security.UserProgram</class>
        <class>com.quesoware.business.domain.security.UserPassword</class>
        <class>com.quesoware.business.domain.security.User</class>
        <class>com.quesoware.business.domain.security.RoleProgram</class>
        <class>com.quesoware.business.domain.security.Role</class>
        <class>com.quesoware.business.domain.security.Program</class>
        <class>com.quesoware.business.domain.security.Module</class>
        <class>com.quesoware.business.domain.sales.SalesOrderMaterial</class>
        <class>com.quesoware.business.domain.sales.SalesOrder</class>
        <class>com.quesoware.business.domain.sales.Customer</class>
        <class>com.quesoware.business.domain.production.Routing</class>
        <class>com.quesoware.business.domain.production.ProductionOrderOperation</class>
        <class>com.quesoware.business.domain.production.ProductionOrderMaterial</class>
        <class>com.quesoware.business.domain.production.ProductionOrder</class>
        <class>com.quesoware.business.domain.inventory.MaterialType</class>
