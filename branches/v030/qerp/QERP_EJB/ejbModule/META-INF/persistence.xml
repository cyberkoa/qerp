        <class>com.quesoware.business.domain.inventory.Material</class>
        <class>com.quesoware.business.domain.general.UOM</class>
        <class>com.quesoware.business.domain.general.Operation</class>
        <class>com.quesoware.business.domain.general.BomDetail</class>
        <class>com.quesoware.business.domain.general.BOM</class>
        <class>com.quesoware.business.domain.finance.Company</class>
        <class>com.quesoware.business.domain.embeddable.RowInfo</class>
        <class>com.quesoware.business.domain.embeddable.Dimension</class>
        <class>com.quesoware.business.domain.embeddable.Address</class>
        <class>com.quesoware.business.domain.base.BaseEntity</class>
        <exclude-unlisted-classes>false</exclude-unlisted-classes>       
    </persistence-unit>
 
</persistence>